    "babel-polyfill": "^6.7.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.7.2",
    "chai": "^3.5.0",
    "electron-prebuilt": "^0.37.3",
    "enzyme": "^2.2.0",
    "eslint": "^2.5.3",
    "eslint-plugin-react": "^4.2.3",
    "espower-babel": "^4.0.3",
    "estraverse": "^4.2.0",
    "estraverse-fb": "^1.3.1",
    "eventemitter3": "^1.2.0",
    "flux": "^2.1.1",
    "immutable": "^3.7.6",
    "jsdom": "^8.2.0",
    "json-loader": "^0.5.4",
    "keyboardjs": "^2.2.0",
    "lodash.isequal": "^4.1.2",
    "material-ui": "^0.14.4",
