{
  "name": "comelon",
  "version": "v0.4.5",
  "main": "main.js",
  "license": "MIT",
  "author": "MaxMEllon <maxmellon1994@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/MaxMEllon/comelon.git"
  },
  "description": "nicolive comment viewer on electron",
  "homepage": "https://github.com/MaxMEllon/comelon",
  "bugs": {
    "url": "https://github.com/MaxMEllon/comelon/issues"
  },
  "bin": {
    "comelon": "./bin/cli.js"
  },
  "keywords": [
    "niconico",
    "nicovideo",
    "electron"
  ],
  "scripts": {
    "start": "npm run compile:watch & abby lint",
    "compile": "webpack",
    "compile:watch": "webpack --watch",
    "lint": "eslint $(git ls-files | grep -e '.js$')",
    "fix": "eslint --fix $(git ls-files | grep -e '.js$')",
    "test": "mocha --timeout 150000 --compilers js:babel-core/register test/**/*.js",
    "cover": "nyc --reporter=lcov --reporter=text npm run test",
    "e2e": " mocha -t 150000 --compilers js:babel-core/register --harmony e2e/nightmare.js"
  },
  "abigail": {
    "plugins": {
      "watch": "*,app/**/*.js,test/**/*.js"
    }
  },
  "dependencies": {
    "nicolive": "^0.0.4"
  },
  "devDependencies": {
    "abigail": "^1.6.1",
    "babel-core": "^6.9.0",
    "babel-eslint": "^6.0.4",
    "babel-loader": "^6.2.4",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-polyfill": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.9.0",
    "chai": "^3.5.0",
    "electron-prebuilt": "^1.1.0",
    "enzyme": "^2.2.0",
    "eslint": "^2.10.2",
    "eslint-plugin-react": "^5.1.0",
    "estraverse": "^4.2.0",
    "estraverse-fb": "^1.3.1",
    "eventemitter3": "^1.2.0",
    "flux": "^2.1.1",
    "immutable": "^3.8.1",
    "itako": "^0.1.2",
    "itako-text-reader-speech-synthesis": "0.0.0",
    "jsdom": "^9.1.0",
    "json-loader": "^0.5.4",
    "keyboardjs": "^2.2.0",
    "lodash.isequal": "^4.2.0",
    "material-ui": "^0.14.4",
    "mocha": "^2.5.2",
    "mocha-generators": "^1.2.0",
    "nightmare": "^2.3.4",
    "nyc": "^6.4.4",
    "object-assign": "^4.0.1",
    "power-assert": "^1.4.0",
    "ramda": "^0.21.0",
    "react": "^0.14.8",
    "react-addons-test-utils": "^0.14.8",
    "react-dom": "^0.14.8",
    "react-imageloader": "^2.1.0",
    "react-tap-event-plugin": "^0.2.2",
    "sinon": "^1.17.4",
    "sinon-chai": "^2.8.0",
    "webpack": "^1.13.0",
    "webpack-strip": "^0.1.0"
  }
}
