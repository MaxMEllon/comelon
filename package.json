{
  "name": "comelon",
  "version": "v0.3.0",
  "main": "main.js",
  "license": "MIT",
  "author": "MaxMEllon <maxmellon1994@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/MaxMEllon/comelon.git"
  },
  "description": "nicolive comment viewer on electron",
  "homepage": "https://github.com/MaxMEllon/comelon",
  "bugs": {
    "url": "https://github.com/MaxMEllon/comelon/issues"
  },
  "bin": {
    "comelon": "./bin/cli.js"
  },
  "keywords": [
    "niconico",
    "nicovideo",
    "electron"
  ],
  "scripts": {
    "start": "abby compile lint",
    "compile": "webpack",
    "lint": "eslint $(git ls-files | grep -e '.js$')",
    "fix": "eslint --fix $(git ls-files | grep -e '.js$')",
    "test": "mocha --timeout 150000 --compilers js:espower-babel/guess test/**/*.js",
    "cover": "nyc --reporter=lcov --reporter=text npm run test",
    "e2e": " mocha -t 150000 --compilers js:espower-babel/guess --harmony e2e/nightmare.js"
  },
  "abigail": {
    "plugins": {
      "watch": "*,app/**/*.js,test/**/*.js"
    }
  },
  "dependencies": {
    "nicolive": "^0.0.4",
    "openjtalk": "^0.1.4"
  },
  "devDependencies": {
    "abigail": "^1.1.6",
    "babel-core": "^6.7.4",
    "babel-eslint": "^6.0.0",
    "babel-loader": "^6.2.4",
